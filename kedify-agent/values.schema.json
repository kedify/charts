{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "schema for values.yaml for kedify agent helm chart",
  "defs": {
    "Top-lvl": {
      "properties": {
        "disableSchemaValidation": {
          "type": "boolean",
          "default": false
        },
        "agent": {
          "$ref": "#/defs/Agent"
        }
      },
      "required": [
        "agent"
      ],
      "if": {
        "properties": {
          "disableSchemaValidation": { "const": false }
        },
        "required": ["disableSchemaValidation"]
      },
      "then": {
        "required": ["agent"]
      }
    },
    "Agent": {
      "properties": {
        "apiKey": {
          "type": "string"
        },
        "createApiKeySecret": {
          "type": "boolean"
        },
        "orgId": {
          "type": "string",
          "format": "uuid"
        },
        "agentId": {
          "type": "string",
          "anyOf": [
            {
              "maxLength": 0
            },
            {
              "format": "uuid"
            }
          ]
        },
        "cloudAccountID": {
          "type": "string",
          "anyOf": [
            {
              "maxLength": 0
            },
            {
              "pattern": "^(aws:|gcp:|kfy:)[a-zA-Z0-9][a-zA-Z0-9-]*$"
            }
          ]
        }
      },
      "if": {
        "properties": {
          "createApiKeySecret": { "const": true }
        }
      },
      "then": {
        "properties": {
          "apiKey": { "pattern": "^kfy_[a-z0-9]*$", "minLength": 10 }
        }
      },
      "required": [
        "apiKey",
        "createApiKeySecret",
        "orgId"
      ]
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "disableSchemaValidation": { "const": false }
        },
        "required": ["disableSchemaValidation"]
      },
      "then": {
        "$ref": "#/defs/Top-lvl"
      }
    }
  ]
}
