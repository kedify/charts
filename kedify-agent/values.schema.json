{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "schema for values.yaml for kedify agent helm chart",
  "$ref": "#/defs/Top-lvl",
  "defs": {
    "Top-lvl": {
      "properties": {
        "agent": {
          "$ref": "#/defs/Agent"
        }
      },
      "required": [
        "agent"
      ]
    },
    "Agent": {
      "properties": {
        "apiKey": {
          "type": "string"
        },
        "createApiKeySecret": {
          "type": "boolean"
        },
        "orgId": {
          "type": "string"
        },
        "agentId": {
          "type": "string",
          "anyOf": [
            {
              "maxLength": 0
            },
            {
              "format": "uuid"
            }
          ]
        },
        "billingCloudProvider": {
          "type": "string",
          "anyOf": [
            {
              "maxLength": 0
            },
            {
              "enum": [
                "aws",
                "azure",
                "gcp"
              ]
            }
          ]
        }
      },
      "required": []
    }
  }
}

